{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES6",
        "lib": [
            "es2019"
        ],
        "module": "ES6",
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false,
        "strictNullChecks": true,
        "strict": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}